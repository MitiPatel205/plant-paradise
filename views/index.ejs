<!-- Featured Plants Section -->
<section class="featured-plants-section py-5 mb-5">
  <div class="container">
    <!-- Section Heading with Icon and Intro -->
    <div class="text-center mb-4">
      <h2 class="mb-2" style="color: var(--forest); font-weight: bold;">
        <i class="bi bi-emoji-nature me-2" style="color: var(--moss);"></i>
        Featured Plants
      </h2>
      <p class="lead" style="color: var(--sage); max-width: 600px; margin: 0 auto;">
        Handpicked for you! Discover our most-loved and beginner-friendly plants to brighten your home and purify your air.
      </p>
    </div>
    <!-- Plant Cards -->
    <div class="row justify-content-center">
      <% plants.slice(0,3).forEach(plant => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow plant-card h-100 position-relative">
            <!-- Optional: Plant Badge -->
            <% if (plant.isNew) { %>
              <span class="badge bg-success position-absolute top-0 end-0 m-2 featured-badge">New</span>
            <% } else if (plant.isEasyCare) { %>
              <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2 featured-badge">Easy Care</span>
            <% } %>
            <img src="<%= plant.image %>" class="card h-100 shadow-sm blog-card card-img-top" alt="<%= plant.name %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title" style="color: var(--forest);"><%= plant.name %></h5>
              <p class="card-text" style="color: var(--sage);"><%= plant.description %></p>
              <div class="mt-auto">
                <a href="/plants/<%= plant.id %>" class="btn btn-outline-success rounded-pill btn-sm">View Details</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <!-- See All Plants Button -->
    <div class="text-center">
      <a href="/plants" class="btn btn-success rounded-pill mt-3 px-4">See All Plants</a>
    </div>
  </div>
</section>


